<html>
    <head>
        <meta charset="utf-8">
        <title>TODO APP</title>
        <style>
            *{
                margin:0;
                padding: 0;
                box-sizing: border-box;
            }
            h1{
                color:#fff;
                font-size: 90%;
                padding: 20px 0 0 40px;
            }
            h2{
                color:rgb(75, 74, 74)
            }
            nav{
                background-color: rgb(78, 77, 78);
                height: 60px;
            }
            .detail{
                border: 1px solid rgb(151, 149, 149);
                box-shadow: 0 2px 2px;
                padding: 3% 3%;
                margin-top: 3%;
            }
            .container{
                font-size: 80%;
                width: 50%;
                margin: 20px auto;
            }
            /* .delete{
                text-decoration: none;
                background-color: blue;
                color: #fff;
                padding: 1% 3%;
                border-radius: 10px;
                margin-top: 5%;
            } */
            .delete{
                margin-top: 2%;
               width: 100%;
               color: #fff;
               height: 40px;
               background-color: rgb(59, 16, 214);
            }
           
        </style>
    </head>
    <body>
        <nav>
            <h1>Todo App</h1>
        </nav>
        <div class="container">
            <h2><%= todo.text%></h2>   
            <div class="detail">
                <h4>Completed:</h4>
                <p><%= todo.completed%></p> 
            </div>
            <div class="detail">
                <h4>Id:</h4>
                <p><%= todo._id%></p>
            </div>
            <form action="/todos/<%=todo._id%>?_method=DELETE" method="POST">
                <button class="delete">DELETE</button>
            </form>
        </div>

</body>
</html>